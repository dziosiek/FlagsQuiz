<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_bg_anim"
    android:id="@+id/new_game_layout"
    tools:context=".NewGame">


    <RelativeLayout
        android:layout_width="307dp"
        android:layout_height="485dp"
        android:layout_centerInParent="true"
        android:background="@color/innerLayout"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/flag"
            android:layout_width="219dp"
            android:layout_height="114dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:contentDescription="@string/flag_img"
            app:srcCompat="@android:color/darker_gray" />

        <TextView
            android:id="@+id/country_name"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="174dp"
            android:gravity="center"
            android:textSize="32sp" />

        <ImageButton
            android:id="@+id/array_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="140dp"
            android:layout_marginStart="50dp"
            android:background="@android:color/transparent"
            android:onClick="leftButton"
            android:visibility="visible"
            app:srcCompat="@drawable/arleft" />

        <ImageButton
            android:id="@+id/array_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/array_left"
            android:layout_marginBottom="105dp"
            android:layout_marginEnd="50dp"
            android:background="@android:color/transparent"
            android:onClick="rightButton"
            app:srcCompat="@drawable/arright" />

        <TextView
            android:id="@+id/char_view"
            android:layout_width="79dp"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/array_right"
            android:layout_centerHorizontal="true"
            android:background="@color/innerLayout"
            android:gravity="center"
            android:onClick="checkButton"
            android:textSize="32sp" />

        <TextView
            android:background="@color/innerLayout"
            android:id="@+id/num_of_tries"
            android:layout_width="232dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="42dp"
            android:gravity="center"
            android:text="@string/numoftries"
            android:textSize="24sp" />
    </RelativeLayout>

</RelativeLayout>